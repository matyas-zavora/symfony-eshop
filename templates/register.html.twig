{% extends 'base.html.twig' %}
{% block title %}- Registrace{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ random(['📖','📕','📘','📗','📙','🕮','📓','📚','📔']) }} Librictio - Registrace</title>
    <style>
        body, html {
            height: 100%;
        }

        .gradient-custom {
            background: linear-gradient(45deg, #540CE8, #3B68DB, #2096D6, #02B5CF, #00D6C4);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
        }

        @keyframes gradientBG {
            0% {
                background-position: 0% 50%;
            }
            50% {
                background-position: 100% 50%;
            }
            100% {
                background-position: 0% 50%;
            }
        }

        .card-registration {
            border: none;
        }

        .form-outline {
            position: relative;
        }

        .form-outline input {
            padding-top: 1.3rem;
            padding-bottom: 0.3rem;
        }

        .form-outline input:focus~.form-label {
            color: #540CE8;
            top: -0.5rem;
        }

        .form-label {
            position: absolute;
            top: 0.7rem;
            left: 0.8rem;
            color: #adb5bd;
            transition: 0.2s;
        }

        .btn-primary {
            background-color: #540CE8;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
        }

        .btn-primary:hover {
            background-color: #3B68DB;
        }

        a {
            color: #adb5bd;
            text-decoration: none;
        }

        a:hover {
            color: #540CE8;
        }
    </style>
</head>

    {{ form_start(registrationForm) }}
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row justify-content-center align-items-center h-100">
                    <div class="col-12 col-lg-9 col-xl-7">
                        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                            <div class="card-body p-4 p-md-5">
                                <h1 class="mb-4 pb-2 pb-md-0 mb-md-5">Registrace</h1>
                                <div class="row">
                                    <div class="col-md-6 mb-4 pb-2">
                                        <div class="form-outline">
                                            <input type="email" id="emailAddress" name="email"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="emailAddress">Email</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-4 pb-2">
                                        <div class="form-outline">
                                            <input type="password" id="psw" name="psw"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="psw">Heslo</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-4 pt-2">
                                    <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                                </div>
                                <br>
                                <a href="./register">Registrovat</a>
                                <p class="mt-3 mb-0">Máte účet? <a href="./login">Přihlaste se</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {{ form_end(registrationForm) }}

    
        


